rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Dish photos for public website
    match /dish-photos/{userId}/{allPaths=**} {
      // Anyone can read (photos are public on website)
      allow read: if true;
      // Only authenticated owner can write
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Store logos and branding
    match /store-assets/{userId}/{allPaths=**} {
      // Anyone can read (assets are public on website)
      allow read: if true;
      // Only authenticated owner can write
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
